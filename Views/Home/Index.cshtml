@model LoginWebsite.Models.User
@{
    Layout = null;
    byte[] image = null;
    if (Session["userID"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
    else
    {
       image = (byte[])Session["image"];
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h1>Dashboard</h1>
        @Html.Image(image)
        <h3>Username :@Session["userName"]</h3>
        <h3>User ID  : @Session["userID"]</h3>
        <a href="@Url.Action("LogOut","Login")">LogOut</a>
        <a href="@Url.Action("RemoveUser","Home", new { id = Session["userID"] })">Remove</a>
        <a href="@Url.Action("EditUser","Home", new { id = Session["userID"] })">Change User Information</a>
        <a href="@Url.Action("ClassManager","Class", new {id = Session["userID"]} )">Class Manager</a>

    </div>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
